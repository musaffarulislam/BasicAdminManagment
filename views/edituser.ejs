<!DOCTYPE html>
<html>
  <!-- head -->
  <%- include('./partials/head.ejs') %>

  <body>

    <nav class="navbar d-flex justify-content-between navbar-expand-lg navbar-light bg-light px-4">
      <a class="navbar-brand" href="#">Musaffar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <form class="form-inline">
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
              <a href="/admin/back"><button type="button" class="btn btn-danger ms-2">Back</button></a>
          </div>
          </div>
      </form>
    </nav>


    <section class="vh-100" style="background-color: #030012;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-7 col-xl-6">
            <div class="card shadow-2-strong bg-dark text-white" style="border-radius: 1rem;">
              <div class="card-body p-4 text-center">
                
                <form  action="/admin/edit-user/<%= user._id %>" method="post" onsubmit="return submitform(event)">
                  <h3 class="mb-4">Edit User</h3>



                  <div id="error"></div>
                  
                  <div class="form-outline mb-3">
                      <input type="text" id="username" class="form-control form-control-lg bg-dark  text-white" name="username" value="<%= user.username %>"/>
                      <label class="form-label text-white" for="typeUsernameX-1">User Name</label>
                  </div>
                  


                  <div class="form-outline mb-3">
                    <input type="email" id="email" class="form-control form-control-lg bg-dark  text-white" name="email" value="<%= user.email %>"/>
                    <label class="form-label text-white" for="typeEmailX-1">Email</label>
                  </div>

                  <div class="d-flex justify-content-between ">
                    <div class="form-outline mb-3 col-7">
                        <input type="text" id="phonenumber" class="form-control form-control-lg bg-dark  text-white" name="phonenumber" value="<%= user.phonenumber %>"/>
                        <label class="form-label text-white" for="typePhoneX-1">Phone Number</label>
                    </div>
                    <div class="col-5  d-flex justify-content-end">
                      <div class="form-outline mb-3 col-11 ">
                        <input type="number" id="age" class="form-control form-control-lg bg-dark  text-white" name="age" value="<%= user.age %>"/>
                        <label class="form-label text-white" for="typeAgeX-1">Age</label>
                      </div>
                    </div>
                  </div>
      
                  <div class="form-outline mb-3">
                    <input type="password" id="firstpassword" name="fpassword" class="form-control form-control-lg bg-dark  text-white" value="<%= user.fpassword %>"/>
                    <label class="form-label  text-white" for="typePasswordX-1">Password</label>
                  </div>
      
                  <div class="form-outline mb-3">
                      <input type="password" id="secondpassword" name="spassword" class="form-control form-control-lg bg-dark  text-white" value="<%= user.spassword %>"/>
                      <label class="form-label  text-white" for="typeconfPasswordX-1">ConformPassword</label>
                    </div>
      
                  <button class="btn btn-primary btn-lg btn-block" type="submit">Edit</button>


                </form>
      
            </div>
          </div>
        </div>
      </div>
    </section>



    <script src="/javascripts/signupvalidation.js"></script>
    
    <!-- mdb script -->
    <%- include('./partials/adminscript.ejs') %>
  </body>
</html>

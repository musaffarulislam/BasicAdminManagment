<!DOCTYPE html>
<html>
  <!-- head -->
  <%- include('./partials/head.ejs') %>

  <body>
    <section class="vh-100" style="background-color: #030012;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-7 col-xl-6">
            <div class="card shadow-2-strong bg-dark text-white" style="border-radius: 1rem;">
              <div class="card-body p-4 text-center">
                
                <form  action="/signup/signup" method="post" onsubmit="return submitform(event)">
                  <h3 class="mb-4">Sign Up</h3>
                  
                  <div id="error"></div>
                  
                  <div class="form-outline mb-3">
                      <input type="text" id="username" class="form-control form-control-lg bg-dark  text-white" name="username" />
                      <label class="form-label text-white" for="typeUsernameX-1">User Name</label>
                  </div>
                  


                  <div class="form-outline mb-3">
                    <input type="email" id="email" class="form-control form-control-lg bg-dark  text-white" name="email" />
                    <label class="form-label text-white" for="typeEmailX-1">Email</label>
                  </div>

                  <div class="d-flex justify-content-between ">
                    <div class="form-outline mb-3 col-7">
                        <input type="number" id="phonenumber" class="form-control form-control-lg bg-dark  text-white" name="phonenumber" />
                        <label class="form-label text-white" for="typePhoneX-1">Phone Number</label>
                    </div>
                    <div class="col-5  d-flex justify-content-end">
                      <div class="form-outline mb-3 col-11 ">
                        <input type="number" id="age" class="form-control form-control-lg bg-dark  text-white" name="age" />
                        <label class="form-label text-white" for="typeAgeX-1">Age</label>
                      </div>
                    </div>
                  </div>
      
                  <div class="form-outline mb-3">
                    <input type="password" id="firstpassword" name="fpassword" class="form-control form-control-lg bg-dark  text-white" />
                    <label class="form-label  text-white" for="typePasswordX-1">Password</label>
                  </div>
      
                  <div class="form-outline mb-3">
                      <input type="password" id="secondpassword" name="spassword" class="form-control form-control-lg bg-dark  text-white" />
                      <label class="form-label  text-white" for="typeconfPasswordX-1">ConformPassword</label>
                    </div>
      
                  <button class="btn btn-primary btn-lg btn-block" type="submit">Sign Up</button>

                </form>
    
                <hr class="my-4">
                
                <div>
                  <p class="mb-0">Already Sign Up? <a href="/" class="text-white-50 fw-bold">Sign In</a>
                  </p>
                </div>
    
            </div>
          </div>
        </div>
      </div>
    </section>



    <script src="/javascripts/signupvalidation.js"></script>
    
    <!-- mdb script -->
    <%- include('./partials/adminscript.ejs') %>
  </body>
</html>
